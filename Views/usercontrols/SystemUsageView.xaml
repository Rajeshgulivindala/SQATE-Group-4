<UserControl x:Class="HospitalManagementSystem.Views.UserControls.SystemUsageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="450">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="HMS Application Status &amp; Load" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#005696"/>
        <!-- Using a common blue hospital color -->

        <!-- Metrics StackPanel (Row 1) -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">

            <!-- 1. Active User Sessions -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Active User Sessions" FontWeight="SemiBold" Foreground="#444444"/>
                    <TextBlock x:Name="ActiveSessionsText" Grid.Column="1" Text="120 / 200 Users" FontWeight="SemiBold" Foreground="#444444"/>
                </Grid>
                <ProgressBar x:Name="ActiveSessionsBar" 
                             Height="12" 
                             Value="60" 
                             Maximum="200"
                             Foreground="#007ACC" 
                             Background="#DDDDDD" 
                             BorderBrush="Transparent"/>
            </StackPanel>

            <!-- 2. Database Load (Connections) -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Database Load (Connections)" FontWeight="SemiBold" Foreground="#444444"/>
                    <TextBlock x:Name="DbLoadText" Grid.Column="1" Text="85 / 100 Max" FontWeight="SemiBold" Foreground="#444444"/>
                </Grid>
                <ProgressBar x:Name="DbLoadBar" 
                             Height="12" 
                             Value="85" 
                             Maximum="100"
                             Foreground="#FF8C00" 
                             Background="#DDDDDD" 
                             BorderBrush="Transparent"/>
            </StackPanel>

            <!-- 3. Pending Task Queue (e.g., Scheduled Reports, HL7 Messages) -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Pending Task Queue" FontWeight="SemiBold" Foreground="#444444"/>
                    <TextBlock x:Name="PendingQueueText" Grid.Column="1" Text="15 Tasks" FontWeight="SemiBold" Foreground="#444444"/>
                </Grid>
                <ProgressBar x:Name="PendingQueueBar" 
                             Height="12" 
                             Value="15" 
                             Maximum="50"
                             Foreground="#DC3545" 
                             Background="#DDDDDD" 
                             BorderBrush="Transparent"/>
            </StackPanel>

            <!-- 4. Core API Service Uptime -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Core API Service Uptime" FontWeight="SemiBold" Foreground="#444444"/>
                    <TextBlock x:Name="ApiUptimeText" Grid.Column="1" Text="99.98 %" FontWeight="SemiBold" Foreground="#444444"/>
                </Grid>
                <ProgressBar x:Name="ApiUptimeBar" 
                             Height="12" 
                             Value="99.98" 
                             Maximum="100"
                             Foreground="#4CAF50" 
                             Background="#DDDDDD" 
                             BorderBrush="Transparent"/>
            </StackPanel>

        </StackPanel>

        <!-- Note (Row 2) -->
        <TextBlock Grid.Row="2" 
                   Text="Application metrics require a real-time data source (e.g., SignalR or Polling) in the C# code-behind to display live status." 
                   FontSize="12" 
                   FontStyle="Italic" 
                   Margin="0,10,0,0"
                   Foreground="#777777"/>
    </Grid>
</UserControl>

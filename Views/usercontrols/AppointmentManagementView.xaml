<UserControl x:Class="HospitalManagementSystem.Views.UserControls.AppointmentManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0" Width="900">
            <TextBlock Text="📅 Appointment Management"
                       FontSize="24" FontWeight="Bold"
                       Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Search by PatientID -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Search by Patient ID:" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="txtSearchPatientId" Grid.Column="1" Height="30" Padding="5" Margin="10,0"/>
                <Button Content="Search" Grid.Column="2" Width="100" Margin="10,0,0,0"
                        Click="SearchButton_Click"/>
            </Grid>

            <!-- Form -->
            <Grid Margin="0,10" Width="900">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Appointment ID:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="txtAppointmentID" Grid.Row="0" Grid.Column="1" Height="30" Margin="0,5"
                         IsReadOnly="True" Background="#E9ECEF"/>

                <Label Content="Patient:" Grid.Row="0" Grid.Column="2" Margin="10,5,0,5"/>
                <ComboBox x:Name="cmbPatient" Grid.Row="0" Grid.Column="3" Height="30" Margin="0,5"
                          DisplayMemberPath="Display" SelectedValuePath="PatientID"/>

                <Label Content="Staff:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                <ComboBox x:Name="cmbStaff" Grid.Row="1" Grid.Column="1" Height="30" Margin="0,5"
                          DisplayMemberPath="Display" SelectedValuePath="StaffID"/>

                <Label Content="Room:" Grid.Row="1" Grid.Column="2" Margin="10,5,0,5"/>
                <ComboBox x:Name="cmbRoom" Grid.Row="1" Grid.Column="3" Height="30" Margin="0,5"
                          DisplayMemberPath="Display" SelectedValuePath="RoomID"/>

                <Label Content="Appointment Date:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                <DatePicker x:Name="dpAppointmentDate" Grid.Row="2" Grid.Column="1" Height="30" Margin="0,5"/>

                <Label Content="Duration (min):" Grid.Row="2" Grid.Column="2" Margin="10,5,0,5"/>
                <TextBox x:Name="txtDuration" Grid.Row="2" Grid.Column="3" Height="30" Margin="0,5"/>

                <Label Content="Type:" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                <ComboBox x:Name="cmbType" Grid.Row="3" Grid.Column="1" Height="30" Margin="0,5"/>

                <Label Content="Status:" Grid.Row="3" Grid.Column="2" Margin="10,5,0,5"/>
                <ComboBox x:Name="cmbStatus" Grid.Row="3" Grid.Column="3" Height="30" Margin="0,5"/>

                <Label Content="Reason:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="txtReason" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Height="30" Margin="0,5"/>

                <Label Content="Notes:" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="txtNotes" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Height="30" Margin="0,5"/>

                <Label Content="Created By:" Grid.Row="6" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="txtCreatedBy" Grid.Row="6" Grid.Column="1" Height="30" Margin="0,5"
                         IsReadOnly="True" Background="#E9ECEF"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Add Appointment" Width="170" Height="40" Margin="5" Click="AddButton_Click"/>
                <Button Content="Update Appointment" Width="170" Height="40" Margin="5" Click="UpdateButton_Click"/>
                <Button Content="Delete Appointment" Width="170" Height="40" Margin="5" Click="DeleteButton_Click"/>
            </StackPanel>

            <!-- Grid -->
            <TextBlock Text="Existing Appointments"
                       FontSize="16" FontWeight="Bold"
                       Margin="0,30,0,10" HorizontalAlignment="Center"/>
            <DataGrid x:Name="AppointmentsDataGrid"
                      Height="300" AutoGenerateColumns="False" CanUserAddRows="False"
                      ItemsSource="{Binding Appointments}" SelectionChanged="AppointmentsDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Appt ID" Binding="{Binding AppointmentID}"/>
                    <DataGridTextColumn Header="Patient ID" Binding="{Binding PatientID}"/>
                    <DataGridTextColumn Header="Staff ID" Binding="{Binding StaffID}"/>
                    <DataGridTextColumn Header="Room ID" Binding="{Binding RoomID}"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate, StringFormat=\{0:dd-MM-yyyy\}}"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding AppointmentDate, StringFormat=\{0:HH\\:mm\}}"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="HospitalManagementSystem.Views.UserControls.FinancialAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Card Style moved to resources to resolve "UIElementCollection" error -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDDDDD" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- KPI Cards -->
            <RowDefinition Height="*"/>
            <!-- Charts and Details -->
        </Grid.RowDefinitions>

        <!-- ROW 0: Title and Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Hospital Financial Analytics Dashboard" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       Foreground="#005696"/>
            <TextBlock Text="Current Period: YTD Q3 FY2024" 
                       FontSize="14" 
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- ROW 1: Key Performance Indicator (KPI) Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- KPI 1: Total Revenue -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Total Revenue" FontSize="14" Foreground="#005696"/>
                    <TextBlock Text="$58.2M" FontSize="30" FontWeight="Bold" Margin="0,5,0,0" Foreground="#2A6848"/>
                    <TextBlock Text="+5.1% vs Last Year" FontSize="12" Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <!-- KPI 2: Operating Expenses -->
            <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Operating Expenses" FontSize="14" Foreground="#005696"/>
                    <TextBlock Text="$41.5M" FontSize="30" FontWeight="Bold" Margin="0,5,0,0" Foreground="#DC3545"/>
                    <TextBlock Text="+3.8% vs Budget" FontSize="12" Foreground="#DC3545"/>
                </StackPanel>
            </Border>

            <!-- KPI 3: Net Income -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Net Income" FontSize="14" Foreground="#005696"/>
                    <TextBlock Text="$12.8M" FontSize="30" FontWeight="Bold" Margin="0,5,0,0" Foreground="#2A6848"/>
                    <TextBlock Text="1.2% Above Target" FontSize="12" Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <!-- KPI 4: Operating Margin -->
            <Border Grid.Column="3" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Operating Margin" FontSize="14" Foreground="#005696"/>
                    <TextBlock Text="22.0%" FontSize="30" FontWeight="Bold" Margin="0,5,0,0" Foreground="#007ACC"/>
                    <TextBlock Text="Target: 20.0%" FontSize="12" Foreground="#666666"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ROW 2: Charts and Detailed Data -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Wider for Revenue Trend -->
                <ColumnDefinition Width="*"/>
                <!-- Smaller for Payer Mix -->
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN: Revenue Trend -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Margin="0,0,15,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Monthly Revenue Trend" FontSize="18" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>

                    <!-- Placeholder for Chart -->
                    <Border Height="350" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="5">
                        <TextBlock Text="[Chart Placeholder: Revenue by Month (Line Graph)]" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#999999" 
                                   FontStyle="Italic"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- RIGHT COLUMN: Payer Mix -->
            <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Payer Mix Breakdown" FontSize="18" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>

                    <!-- Placeholder for Pie Chart/Table -->
                    <Border Height="350" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="5">
                        <TextBlock Text="[Chart Placeholder: Payer Mix (Pie Chart/Table)]" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#999999" 
                                   FontStyle="Italic"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

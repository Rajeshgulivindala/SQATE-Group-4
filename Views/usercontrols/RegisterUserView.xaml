<UserControl x:Class="HospitalManagementSystem.Views.UserControls.RegisterUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F4F7FC">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Register New User" 
                   FontSize="28" FontWeight="Bold" Margin="0,0,0,24" />

        <!-- Username -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Username:" Margin="0,0,0,6"/>
            <TextBox x:Name="TxtUsername" Height="28"/>
        </StackPanel>

        <!-- Email (NEW) -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Email:" Margin="0,0,0,6"/>
            <TextBox x:Name="TxtEmail" Height="28"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Password:" Margin="0,0,0,6"/>
            <PasswordBox x:Name="PwdBox" Height="28"/>
        </StackPanel>

        <!-- Role -->
        <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Role:" Margin="0,0,0,6"/>
            <ComboBox x:Name="CmbRole" Height="28">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Doctor"/>
                <ComboBoxItem Content="Nurse"/>
                <ComboBoxItem Content="Clerk"/>
                <ComboBoxItem Content="Patient"/>
            </ComboBox>
        </StackPanel>

        <!-- Button -->
        <Button Grid.Row="5" x:Name="BtnRegister" Content="Register User" Height="34" Width="160"
                HorizontalAlignment="Left" Click="BtnRegister_Click"/>
    </Grid>
</UserControl>

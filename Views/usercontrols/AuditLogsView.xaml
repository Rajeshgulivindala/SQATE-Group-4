<UserControl x:Class="HospitalManagementSystem.Views.UserControls.AuditLogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Filter Controls -->
            <RowDefinition Height="*"/>
            <!-- Audit Data Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar/Pagination -->
        </Grid.RowDefinitions>

        <!-- ROW 0: Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="System Audit Logs" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       Foreground="#005696"/>
            <TextBlock Text="View and filter all user and system activity records." 
                       FontSize="14" 
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- ROW 1: Filter Controls Panel -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,15"
                Background="#F9F9F9">
            <StackPanel Orientation="Horizontal">

                <!-- Filter 1: Date Range -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="DateFromPicker" Width="120"/>
                    <TextBlock Text="To:" VerticalAlignment="Center" Margin="10,0,5,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="DateToPicker" Width="120"/>
                </StackPanel>

                <!-- Filter 2: User ID -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock Text="User/Staff ID:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="UserIdFilterBox" Width="150" Text="e.g., STF-202401-001"/>
                </StackPanel>

                <!-- Filter 3: Action Type -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock Text="Action Type:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="ActionTypeComboBox" Width="120">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="CREATE"/>
                        <ComboBoxItem Content="UPDATE"/>
                        <ComboBoxItem Content="DELETE"/>
                        <ComboBoxItem Content="LOGIN"/>
                    </ComboBox>
                </StackPanel>

                <!-- Filter Button -->
                <Button Content="Apply Filters" 
                        x:Name="ApplyFilterButton" 
                        Width="100" 
                        Height="30" 
                        Margin="10,0,0,0"
                        Background="#007ACC" 
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontWeight="Bold"/>

                <!-- Clear Button -->
                <Button Content="Clear" 
                        x:Name="ClearFilterButton" 
                        Width="80" 
                        Height="30" 
                        Margin="10,0,0,0"
                        Background="#CCCCCC" 
                        Foreground="#333333"
                        BorderBrush="Transparent"/>
            </StackPanel>
        </Border>

        <!-- ROW 2: Audit Log DataGrid -->
        <Border Grid.Row="2" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8" 
                Background="White">

            <DataGrid x:Name="AuditLogDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#EEEEEE"
                      Margin="5"
                      FrozenColumnCount="1">
                <!-- FIX: Use FrozenColumnCount on the DataGrid -->

                <DataGrid.Columns>
                    <!-- FIX: IsFrozen is removed from DataGridTextColumn -->
                    <DataGridTextColumn Header="Timestamp" Width="Auto" Binding="{Binding Timestamp}"/>
                    <DataGridTextColumn Header="User ID" Width="120" Binding="{Binding UserId}"/>
                    <DataGridTextColumn Header="Action" Width="80" Binding="{Binding ActionType}"/>
                    <DataGridTextColumn Header="Entity" Width="100" Binding="{Binding EntityAffected}"/>
                    <DataGridTextColumn Header="Record ID" Width="150" Binding="{Binding RecordIdAffected}"/>
                    <DataGridTextColumn Header="IP Address" Width="120" Binding="{Binding IpAddress}"/>
                    <DataGridTextColumn Header="Details Summary" Width="*" Binding="{Binding DetailsSummary}"/>
                    <DataGridTemplateColumn Header="View Full" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View" Margin="2" Padding="5,2" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ROW 3: Status/Pagination (Simulated) -->
        <TextBlock Grid.Row="3" 
                   Text="Showing 1 - 50 of 1,235 total records." 
                   Margin="0,10,0,0" 
                   HorizontalAlignment="Right" 
                   Foreground="#777777"/>
    </Grid>
</UserControl>

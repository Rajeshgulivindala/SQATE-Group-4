<Window x:Class="HospitalManagementSystem.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Management System"
        Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Simple sidebar button style -->
        <Style x:Key="NavigationButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="10,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1F2B33"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SubMenuButton" TargetType="Button" BasedOn="{StaticResource NavigationButton}">
            <Setter Property="Padding" Value="36,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#34495E">
            <DockPanel LastChildFill="True">

                <!-- Logout at bottom -->
                <Button Content="Logout"
                DockPanel.Dock="Bottom"
                Style="{StaticResource NavigationButton}"
                Margin="0,10,0,10"
                Click="LogoutButton_Click"/>

                <!-- Navigation groups -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Dashboard for all -->
                        <Button Content="Dashboard"
                    Style="{StaticResource NavigationButton}"
                    Tag="dashboard"
                    Click="NavigationButton_Click"/>

                        <!-- Admin sections -->
                        <Expander x:Name="UserExpander" Header="User Management" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="Register New User" Style="{StaticResource SubMenuButton}" Tag="registeruser" Click="NavigationButton_Click"/>
                                <Button Content="Modify Roles"      Style="{StaticResource SubMenuButton}" Tag="modifyroles"   Click="NavigationButton_Click"/>
                                <Button Content="Deactivate/Activate" Style="{StaticResource SubMenuButton}" Tag="deactivateusers" Click="NavigationButton_Click"/>
                                <Button Content="Password Reset"    Style="{StaticResource SubMenuButton}" Tag="passwordreset" Click="NavigationButton_Click"/>
                                <Button Content="Staff Management"  Style="{StaticResource SubMenuButton}" Tag="staffmanagement" Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="SystemExpander" Header="System Configuration" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="Department Management" Style="{StaticResource SubMenuButton}" Tag="departmentmanagement" Click="NavigationButton_Click"/>
                                <Button Content="Room Management"       Style="{StaticResource SubMenuButton}" Tag="roommanagement"      Click="NavigationButton_Click"/>
                                <Button Content="Hospital Settings"     Style="{StaticResource SubMenuButton}" Tag="hospitalsettings"    Click="NavigationButton_Click"/>
                                <Button Content="Backup and Maintenance" Style="{StaticResource SubMenuButton}" Tag="backupmaintenance"  Click="NavigationButton_Click"/>
                                <Button Content="Communication"         Style="{StaticResource SubMenuButton}" Tag="communication"       Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="ReportsExpander" Header="Reports and Analytics" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="System Usage"       Style="{StaticResource SubMenuButton}" Tag="systemusage"       Click="NavigationButton_Click"/>
                                <Button Content="Financial Analytics" Style="{StaticResource SubMenuButton}" Tag="financialanalytics" Click="NavigationButton_Click"/>
                                <Button Content="Staff Performance"  Style="{StaticResource SubMenuButton}" Tag="staffperformance"   Click="NavigationButton_Click"/>
                                <Button Content="Audit Logs"         Style="{StaticResource SubMenuButton}" Tag="auditlogs"          Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Doctor -->
                        <Expander x:Name="DoctorExpander" Header="Doctor Dashboard" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="Patient Management"     Style="{StaticResource SubMenuButton}" Tag="patientmanagement"     Click="NavigationButton_Click"/>
                                <Button Content="Appointment Management" Style="{StaticResource SubMenuButton}" Tag="appointmentmanagement" Click="NavigationButton_Click"/>
                                <Button Content="Medical Records"        Style="{StaticResource SubMenuButton}" Tag="medicalrecords"        Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Nurse -->
                        <Expander x:Name="NurseExpander" Header="Nurse Options" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="Patient Management" Style="{StaticResource SubMenuButton}" Tag="patientmanagement" Click="NavigationButton_Click"/>
                                <Button Content="Shift Management"   Style="{StaticResource SubMenuButton}" Tag="shiftmanagement"   Click="NavigationButton_Click"/>
                                <Button Content="Communication"      Style="{StaticResource SubMenuButton}" Tag="communication"     Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Clerk -->
                        <Expander x:Name="ClerkExpander" Header="Clerk Functions" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="Patient Management"     Style="{StaticResource SubMenuButton}" Tag="patientmanagement"     Click="NavigationButton_Click"/>
                                <Button Content="Appointment Management" Style="{StaticResource SubMenuButton}" Tag="appointmentmanagement" Click="NavigationButton_Click"/>
                                <Button Content="Financial Analytics"    Style="{StaticResource SubMenuButton}" Tag="financialanalytics"    Click="NavigationButton_Click"/>
                                <Button Content="Communication"          Style="{StaticResource SubMenuButton}" Tag="communication"         Click="NavigationButton_Click"/>
                                <Button Content="Billing"                Style="{StaticResource SubMenuButton}" Tag="billing"               Click="NavigationButton_Click"/>
                                <Button Content="Room Management"        Style="{StaticResource SubMenuButton}" Tag="roommanagement"        Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Inventory (optional; hide by default except roles that need it) -->
                        <Expander x:Name="InventoryExpander" Header="Inventory" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="Supplier Management" Style="{StaticResource SubMenuButton}" Tag="suppliermanagement" Click="NavigationButton_Click"/>
                                <Button Content="Stock Monitoring"    Style="{StaticResource SubMenuButton}" Tag="stockmonitoring"    Click="NavigationButton_Click"/>
                                <Button Content="Purchase Orders"     Style="{StaticResource SubMenuButton}" Tag="purchaseorders"     Click="NavigationButton_Click"/>
                                <Button Content="Purchase Approvals"  Style="{StaticResource SubMenuButton}" Tag="purchaseapprovals"  Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Patient -->
                        <Expander x:Name="PatientExpander" Header="My Account" Foreground="White" Background="Transparent" IsExpanded="False">
                            <StackPanel>
                                <Button Content="My Profile" Style="{StaticResource SubMenuButton}" Tag="patientprofile" Click="NavigationButton_Click"/>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Column="1" Background="White" Padding="20">
            <ContentControl x:Name="MainContentArea">
                <TextBlock Text="Loading..." FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ContentControl>
        </Border>
    </Grid>
</Window>

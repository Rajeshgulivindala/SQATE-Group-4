<Window x:Class="HospitalManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Hospital Management System" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <materialDesign:Card Grid.Column="0" Margin="16" Padding="0">
            <StackPanel>
                <TextBlock Text="HMS Navigation" 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          Margin="16" HorizontalAlignment="Center"/>
                <!-- Navigation items will be added here -->
            </StackPanel>
        </materialDesign:Card>

        <!-- Content Area -->
        <materialDesign:Card Grid.Column="1" Margin="16">
            <ContentControl x:Name="MainContent" Margin="16"/>
        </materialDesign:Card>
    </Grid>
</Window>
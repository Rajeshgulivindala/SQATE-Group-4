<Window x:Class="HospitalManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Management System" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <TextBlock Text="Hospital Management System" 
                      FontSize="20" FontWeight="Bold" 
                      Foreground="White" VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Sidebar -->
            <Border Grid.Column="0" Background="#34495E">
                <StackPanel>
                    <Button Content="🏠 Dashboard" Tag="Dashboard" Click="NavigationButton_Click" 
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="20,15" HorizontalAlignment="Stretch" FontSize="14" 
                            HorizontalContentAlignment="Left"/>
                    <Button Content="👤 Patients" Tag="Patients" Click="NavigationButton_Click"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="20,15" HorizontalAlignment="Stretch" FontSize="14" 
                            HorizontalContentAlignment="Left"/>
                    <Button Content="👨‍⚕ Staff" Tag="Staff" Click="NavigationButton_Click"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="20,15" HorizontalAlignment="Stretch" FontSize="14" 
                            HorizontalContentAlignment="Left"/>
                    <Button Content="📅 Appointments" Tag="Appointments" Click="NavigationButton_Click"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="20,15" HorizontalAlignment="Stretch" FontSize="14" 
                            HorizontalContentAlignment="Left"/>
                    <Button Content="📦 Inventory" Tag="Inventory" Click="NavigationButton_Click"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="20,15" HorizontalAlignment="Stretch" FontSize="14" 
                            HorizontalContentAlignment="Left"/>
                    <Button Content="📊 Reports" Tag="Reports" Click="NavigationButton_Click"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="20,15" HorizontalAlignment="Stretch" FontSize="14" 
                            HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="White" Padding="20">
                <ContentControl x:Name="MainContentArea">
                    <TextBlock Text="Welcome to Hospital Management System" 
                              FontSize="24" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                </ContentControl>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#BDC3C7" Padding="10,5">
            <TextBlock x:Name="StatusText" Text="Ready" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>